{
  "name": "demoscript",
  "version": "1.0.1",
  "description": "The simplest way to demo your TS code",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tsc",
    "build": "tsup src/index.ts src/engine/index.ts --dts --minify --format cjs,esm --out-dir dist",
    "demo": "ts-node cli.ts --engine ./src/defaultEngine"
  },
  "bin": {
    "demoscript": "cli.ts"
  },
  "author": "dino-prpic",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@swc/core": "^1.5.5",
    "@types/terminal-kit": "^2.5.6",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "terminal-kit": "^3.1.1",
    "ts-node": "^10.9.2"
  }
}
